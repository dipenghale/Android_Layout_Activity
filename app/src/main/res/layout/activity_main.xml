    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
        android:padding="5dp"
        tools:context=".MainActivity">
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:src="@drawable/pp_icon"
            android:gravity="center"
            android:maxWidth="100dp"
            android:maxHeight="35dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/register_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Register an account"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:textColor="@color/txtpurple"
            android:gravity="center"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:hint="Full name"
        android:paddingLeft="15px"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:hint="Email Address"
        android:paddingLeft="15px"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:paddingLeft="15px"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:hint="Phone Number"
        android:paddingLeft="15px"
        android:inputType="phone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Gender:"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rdbtn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Male">

        </RadioButton>
        <RadioButton
            android:id="@+id/rdbtn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Female"
            >
        </RadioButton>
        <RadioButton
            android:id="@+id/rdbtn3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Other"
            >

        </RadioButton>
    </RadioGroup>
    <TextView
        android:id="@+id/interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are your interest?"
        ></TextView>
    <CheckBox
        android:id="@+id/music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music"
        ></CheckBox>
    <CheckBox
        android:id="@+id/football"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Football"
        ></CheckBox>
    <CheckBox
        android:id="@+id/dance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dance"
        ></CheckBox>
    <CheckBox
        android:id="@+id/eating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eating"
        ></CheckBox>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        />
    <Button
        android:id="@+id/regButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        android:gravity="center"
        android:background="@color/purplebg"
        android:textColor="@color/white"
        >

    </Button>

